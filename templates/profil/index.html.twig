		<h2>Shares</h2>
		{% for articlesShares in articleShare %}
			{{ articlesShares.title }}
		{% endfor %}
	</div>

	<div class="commentAccueil">
		<h2>Comments</h2>
		{% for articlesComments in articleComment %}
			{{ articlesComments.title }}
		{% endfor %}
	</div>
