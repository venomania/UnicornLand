<link rel="stylesheet" href="/asset/css/article.css">
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
	<a class="navbar-brand" href="#"><img src="{{ asset('/asset/pictures/Logo.png') }}" class="logo"/></a>
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
		<span class="navbar-toggler-icon"></span>
	</button>

	<div class="collapse navbar-collapse" id="navbarColor01">
		<ul class="navbar-nav mr-auto">
			<li class="nav-item {% if app.request.attributes.get('_route') == 'accueil' %}active{% endif %}">
				<a class="nav-link" href="{{path('accueil')}}">
					Accueil
				</a>
			</li>
			<li class="nav-item {% if app.request.attributes.get('_route') == 'about' %}active{% endif %}">
				<a class="nav-link" href="{{path('about')}}">A propos</a>
			</li>
			<li class="nav-item {% if app.request.attributes.get('_route') == 'contact' %}active{% endif %}">
